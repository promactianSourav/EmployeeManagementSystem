@model EmployeeManagement.Models.Department

@{
    ViewData["Title"] = "Edit Page for Department";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit","Department",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
        

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(m => m.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-secondary btn-sm btn-block">Save</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>